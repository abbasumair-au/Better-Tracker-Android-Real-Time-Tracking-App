<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/profile"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/profile2"
        app:layout_constraintTop_toBottomOf="@id/userPassword"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        />

    <TextView
        android:id="@+id/userNameProfile"
        android:layout_width="370dp"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:padding="10dp"
        android:background="@drawable/simpletext"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/profile"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:drawableLeft="@drawable/id"
        android:drawablePadding="3dp"/>

    <TextView
        android:id="@+id/userFirstNameProfile"
        android:layout_width="370dp"
        android:layout_height="45dp"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/simpletext"
        app:layout_constraintTop_toBottomOf="@id/userNameProfile"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:drawableLeft="@drawable/avatar"
        android:drawablePadding="3dp"
        />

    <TextView
        android:id="@+id/userEmailProfile"
        android:layout_width="370dp"
        android:layout_height="45dp"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:background="@drawable/simpletext"
        android:inputType="textEmailAddress"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/userFirstNameProfile"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:drawableLeft="@drawable/mail"
        android:drawablePadding="3dp"
        />


</android.support.constraint.ConstraintLayout>