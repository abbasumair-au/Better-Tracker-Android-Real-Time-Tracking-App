<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.murtaza.bettertracker.ui.home.HomeActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/login"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        android:src="@drawable/logonewfinal" />

    <Button
        android:id="@+id/login"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/register"
        android:layout_marginTop="20dp"
        android:text="Login"
        android:textAllCaps="true"
        android:paddingLeft="15dp"
        android:paddingRight="-10dp"
        android:textSize="17sp"
        android:textColor="#ffffff"
        android:drawablePadding="-50dp"
        android:drawableLeft="@drawable/sign_out"
        android:background="@drawable/startbutton"
        />

    <Button
        android:id="@+id/register"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/login"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/google"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Sign up"
        android:textAllCaps="true"
        android:textSize="17sp"
        android:drawableLeft="@drawable/sign_up"
        android:paddingLeft="15dp"
        android:drawablePadding="-42dp"
        android:textColor="#ffffff"
        android:background="@drawable/startbutton"
        />

    <Button
        android:id="@+id/google"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/startbuttonstroke"
        android:drawableLeft="@drawable/google_black"
        android:drawablePadding="-30dp"
        android:paddingLeft="15dp"
        android:text="Continue with google"
        android:textAllCaps="true"
        app:layout_constraintBottom_toTopOf="@id/facebook"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register" />

    <Button
        android:id="@+id/facebook"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/google"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:text="Continue with facebook"
        android:textAllCaps="true"
        android:paddingLeft="15dp"
        android:drawablePadding="-30dp"
        android:drawableLeft="@drawable/facebook_black"
        android:background="@drawable/startbuttonstroke"
        />

</android.support.constraint.ConstraintLayout>
