<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.murtaza.bettertracker.ui.settings.updateaccount.updateprofile">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Profile"
        android:textAllCaps="true"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="parent"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:fontFamily="sans-serif-smallcaps"
        android:id="@+id/heading"
        />

    <TextView
        android:id="@+id/userNameUpdate"
        android:layout_width="370dp"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:padding="10dp"
        android:background="@drawable/simpletext"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/heading"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:drawableLeft="@drawable/id"
        android:drawablePadding="3dp"
        android:inputType="none"
        />

    <EditText
        android:id="@+id/userFirstNameUpdate"
        android:layout_width="370dp"
        android:layout_height="45dp"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/simpletext"
        app:layout_constraintTop_toBottomOf="@id/userNameUpdate"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:drawableLeft="@drawable/avatar"
        android:drawablePadding="3dp"
        />

    <EditText
        android:id="@+id/userLastNameUpdate"
        android:layout_width="370dp"
        android:layout_height="45dp"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:background="@drawable/simpletext"
        android:inputType="textPersonName"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/userFirstNameUpdate"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:drawableLeft="@drawable/avatar"
        android:drawablePadding="3dp"
        />

    <TextView
        android:id="@+id/userEmailUpdate"
        android:layout_width="370dp"
        android:layout_height="45dp"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:background="@drawable/simpletext"
        android:inputType="none"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/userLastNameUpdate"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:drawableLeft="@drawable/mail"
        android:drawablePadding="3dp"
        />

    <Button
        android:id="@+id/updateProfile"
        android:layout_width="370dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/simplebutton"
        android:text="Update Account"
        android:textAllCaps="true"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@+id/userEmailUpdate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


</android.support.constraint.ConstraintLayout>
